<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staffInvite_okdl3_L1"
    android:layout_width="wrap_content"
    android:layout_height="276dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/ydialog_yesnoblue">

    <!-- 내용 textview-->
    <TextView
        android:id="@+id/staffInvite_okdl3_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="[이름] 직원을 합류시키시겠습니까?"
        android:lineSpacingExtra="5dp"
        android:textColor="#646464"
        android:layout_marginTop="70dp" />
    <!-- 내용 textview-->
    <TextView
        android:id="@+id/staffInvite_okdl3_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="직원 정보 입력을 완료하신 후\n 합류완료 버튼을 눌러야 합류됩니다."
        android:lineSpacingExtra="5dp"
        android:textColor="#646464"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:id="@+id/staffInvite_deletedl2_HL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <!-- 취소 버튼 -->
        <Button
            android:id="@+id/staffInvite_okdl3_canclebtn1"
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <!-- 승인 버튼 -->
        <Button
            android:id="@+id/staffInvite_okdl3_okbtn2"
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|right"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="승인"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>