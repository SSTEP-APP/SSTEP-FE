<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".joinlogin.Find_password"
    android:id="@+id/findPass_layoutL">

    <!-- top_비밀번호 찾기-->
    <FrameLayout
        android:id="@+id/findPass_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/findPass_topText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/top"
            android:gravity="center_horizontal|center_vertical"
            android:text="비밀번호 찾기"
            android:textColor="@color/likeblack"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/findPass_line"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/yunderline_text"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/findPass_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yicon_back" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/j_layout_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/findPass_nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="@color/likeblack"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/findPass_nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/yedittext_w_sg"
                    android:fontFamily="@font/nanumsquareneo_brg"
                    android:hint="이름 입력"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/editTextHint"
                    android:textSize="13sp"
                    android:padding="15dp"
                    android:textCursorDrawable="@drawable/yet_cursor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/findPass_PhonumText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textColor="@color/likeblack"
                    android:textSize="12sp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/findPass_phonumEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yedittext_w_sg"
                        android:fontFamily="@font/nanumsquareneo_brg"
                        android:hint="전화번호 입력"
                        android:inputType="phone|number"
                        android:textColorHint="@color/editTextHint"
                        android:textSize="13sp"
                        android:padding="15dp"
                        android:textCursorDrawable="@drawable/yet_cursor"/>

                    <Button
                        android:id="@+id/findPass_certbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/yroundrec_w_sblue"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="인증확인"
                        android:textSize="13sp"
                        android:textColor="@color/blue"
                        android:layout_gravity="right|center_vertical" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/findPass_passText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textColor="@color/likeblack"
                    android:textSize="12sp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/findPass_passEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yedittext_w_sg"
                        android:fontFamily="@font/nanumsquareneo_brg"
                        android:hint="영문, 숫자, 특수문자 조합 6자 이상"
                        android:inputType="textPassword"
                        android:textColorHint="@color/editTextHint"
                        android:textSize="13sp"
                        android:padding="15dp"
                        android:textCursorDrawable="@drawable/yet_cursor"/>
                    <CheckBox
                        android:id="@+id/findPass_passEyeCb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:checked="false"
                        android:button="@drawable/ychbox_eyeonoff"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/findPass_checkPassText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textColor="@color/likeblack"
                    android:textSize="12sp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/findPass_checkPassEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yedittext_w_sg"
                        android:fontFamily="@font/nanumsquareneo_brg"
                        android:hint="새 비밀번호 확인"
                        android:inputType="textPassword"
                        android:textColorHint="@color/editTextHint"
                        android:textSize="13sp"
                        android:padding="15dp"
                        android:textCursorDrawable="@drawable/yet_cursor"/>
                    <CheckBox
                        android:id="@+id/findPass_checkPassEyeCb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:checked="false"
                        android:button="@drawable/ychbox_eyeonoff"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/findPass_checkText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* 비밀번호가 일치하지 않습니다."
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/findPass_view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/findPass_completeBtn"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/yroundrec_bottombtnoff"
        android:clickable="false"
        android:text="비밀번호 변경"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>