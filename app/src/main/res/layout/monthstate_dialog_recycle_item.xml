<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/monthstate_dialog_recycle_layout"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <!-- 직원 list _HL -->
    <LinearLayout
        android:id="@+id/monthstate_dialog_recycle_innerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/monthstate_dialog_recycle_personIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/yicon_stafffemale"
            android:layout_marginLeft="20dp"/>
        <!-- 이름, 직책 _L -->
        <LinearLayout
            android:id="@+id/monthstate_dialog_recycle_L2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/monthstate_dialog_recycle_nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김유경"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/monthstate_dialog_recycle_numTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:text="지각: 3회"
                android:textSize="11sp"
                android:textColor="#595959"
                android:layout_marginTop="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/yroundrec_w_sg2"/>
        </LinearLayout> <!-- 이름, 직책 _L -->
    </LinearLayout> <!-- 직원 list _HL -->

</LinearLayout>
