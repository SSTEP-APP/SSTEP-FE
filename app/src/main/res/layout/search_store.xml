<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Search_Store">

    <!-- top_사업장 검색-->
    <FrameLayout
        android:id="@+id/searchStore_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/searchStore_topText"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/lightblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="사업장 검색"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/searchStore_back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yicon_back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <EditText
                android:id="@+id/searchStore_searchEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#737373"
                android:ems="17"
                android:hint="  예) 판교역로 235, 분당 주공, 삼평동 681"
                android:inputType="textPersonName"
                android:textColorHint="#8C8C8C"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/searchStore_searchbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/j_search_icon" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="37dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchStore_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tip"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/searchStore_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n아래와 같은 조합으로 검색을 하시면 더욱 정확한 \n결과가  검색됩니다.\n\n도로명 + 건물번호 "
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/searchStore_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예) 판교역로 235, 제주 첨단로 242 \n"
                android:textColor="#20A7F2"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/searchStore_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지역명(동/리) + 번지"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/searchStore_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예) 삼평동 681, 제주 양평동 2181 \n"
                android:textColor="#20A7F2"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/searchStore_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지역명(동/리) + 건물명(아파트명)"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/searchStore_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예) 분당 주공, 연수동 주공 3차 \n"
                android:textColor="#20A7F2"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/searchStore_text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사서함명 + 번호"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/searchStore_text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예) 분당우체국사서함 1-100"
                android:textColor="#20A7F2"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>