<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:id="@+id/paperw_L1">

    <!-- top_문서관리 -->
    <FrameLayout
        android:id="@+id/paperw_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top">

        <TextView
            android:id="@+id/paperw_topTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="근로계약서"
            android:textColor="@color/topText"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:background="@color/line" />

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/paperw_backib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yicon_back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유형"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:fontFamily="@font/nanumsquareneo_deb"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/nanumsquareneo_deb"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/line" />



        <!-- 근로계약서 _F -->
        <FrameLayout
            android:id="@+id/paperw_workpF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yroundrec_gf1"
            android:paddingTop="35dp"
            android:paddingBottom="35dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:clickable="true">

            <!-- 근로계약서_text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="표준 근로 계약서"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableLeft="@drawable/yicon_paperw_paper"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/paperw_workpgoIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yicon_go"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp" />
        </FrameLayout> <!-- 근로계약서 _F -->

        <!-- 보건증 _F -->
        <FrameLayout
            android:id="@+id/paperw_healthpF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yroundrec_gf1"
            android:paddingTop="35dp"
            android:paddingBottom="35dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp">

            <!-- 보건증_text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 촬영"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableLeft="@drawable/yicon_paperw_camera"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/paperw_healthpgoIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yicon_go"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp" />
        </FrameLayout> <!-- 보건증 _F -->

    </LinearLayout>
</LinearLayout>