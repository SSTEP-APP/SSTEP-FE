<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1"
    android:id="@+id/paperh_L1">

    <!-- top_보건증 직원 목록-->
    <FrameLayout
        android:id="@+id/paperh_F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/paperh_toptv"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/lightblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="보건증 직원 목록"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/paperh_backib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yicon_back" />

        <!-- 홈 아이콘 -->
        <ImageView
            android:id="@+id/paperh_homeiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/yicon_home" />
    </FrameLayout>

    <!-- 스크롤 -->
    <ScrollView
        android:id="@+id/paperh_scoll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/paperh_L3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <!-- 보건증 등록 직원 Frame -->
            <FrameLayout
                android:id="@+id/paperh_F2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yroundrec_w"
                android:paddingTop="25dp"
                android:paddingBottom="25dp">

                <LinearLayout
                    android:id="@+id/paperh_L4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 위에 보건증 등록 직원 + 숫자 -->
                    <LinearLayout
                        android:id="@+id/paperh_HL1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- 보건증 등록 직원_text -->
                        <TextView
                            android:id="@+id/paperh_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingLeft="15dp"
                            android:text="보건증 등록 직원"
                            android:textColor="#737373"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- 숫자_text-->
                        <TextView
                            android:id="@+id/paperh_numtv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="1"
                            android:textColor="#0D69F3"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/paperh_linetv3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:minHeight="1dp"
                        android:background="@drawable/yunderline_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom"/>
                    <!-- 보건증 등록 직원 리스트 frame -->
                    <FrameLayout
                        android:id="@+id/paperh_F3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp">
                        <!-- 사람이미지 -->
                        <ImageView
                            android:id="@+id/paperh_pimage1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            app:srcCompat="@drawable/yimage_female" />

                        <!-- 이름 [직책] -->
                        <TextView
                            android:id="@+id/paperh_nametv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="5dp"
                            android:text="이름 [직책]"
                            android:textColor="#737373"
                            android:textSize="13sp" />

                        <!-- 검진일 -->
                        <TextView
                            android:id="@+id/paperh_idtv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="30dp"
                            android:text="검진일 : 2023.02.17 (갱신 D-362)"
                            android:textColor="#737373"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/paperh_goiv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yicon_go"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="20dp" />
                    </FrameLayout> <!-- 보건증 등록 직원 리스트 frame -->
                </LinearLayout>
            </FrameLayout> <!-- 보건증 등록 직원 Frame -->

            <!-- 보건증 미등록 직원 Frame -->
            <FrameLayout
                android:id="@+id/paperh_F4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yroundrec_w"
                android:paddingTop="25dp"
                android:paddingBottom="25dp">

                <LinearLayout
                    android:id="@+id/paperh_L5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 위에 보건증 미등록 직원 + 숫자 -->
                    <LinearLayout
                        android:id="@+id/paperh_HL2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- 보건증 미등록 직원_text -->
                        <TextView
                            android:id="@+id/paperh_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingLeft="15dp"
                            android:text="보건증 미등록 직원"
                            android:textColor="#737373"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- 숫자_text-->
                        <TextView
                            android:id="@+id/paperh_numtv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="1"
                            android:textColor="#0D69F3"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/paperh_linetv4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:minHeight="1dp"
                        android:background="@drawable/yunderline_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom"/>

                    <!-- 보건증 미등록 직원 리스트 frame -->
                    <FrameLayout
                        android:id="@+id/paperh_F5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp">
                        <!-- 사람이미지 -->
                        <ImageView
                            android:id="@+id/paperh_pimage2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            app:srcCompat="@drawable/yimage_female" />

                        <!-- 이름 -->
                        <TextView
                            android:id="@+id/paperh_nametv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="5dp"
                            android:text="이름 [직책]"
                            android:textColor="#737373"
                            android:textSize="13sp" />

                        <!-- 아이디 -->
                        <TextView
                            android:id="@+id/paperh_idtv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="30dp"
                            android:text="보건증 미등록"
                            android:textColor="@color/lightred"
                            android:textSize="13sp" />
                        <ImageView
                            android:id="@+id/paperh_goiv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yicon_go"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="20dp" />
                    </FrameLayout> <!-- 보건증 미등록 직원 리스트 frame -->
                </LinearLayout>
            </FrameLayout> <!-- 보건증 미등록 직원 Frame -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>