<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inputStaffInfo_pselectdl_L1"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/inputStaffInfo_pselectdl_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="급여비율 선택(%)"
        android:textColor="#737373"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"/>

    <LinearLayout
        android:id="@+id/inputStaffInfo_pselectdl_L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/ytable_outsideline">
        <RadioGroup
            android:id="@+id/inputStaffInfo_pselectdl_rg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/inputStaffInfo_pselectdl_rb1"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="false"
                android:text="100"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@drawable/yradiobtn_tabletext"
                android:background="@drawable/yradiobtn_table"/>

            <RadioButton
                android:id="@+id/inputStaffInfo_pselectdl_rb2"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="false"
                android:text="90"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@drawable/yradiobtn_tabletext"
                android:background="@drawable/yradiobtn_table"/>
            <RadioButton
                android:id="@+id/inputStaffInfo_pselectdl_rb3"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="false"
                android:text="80"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@drawable/yradiobtn_tabletext"
                android:background="@drawable/yradiobtn_table" />
            <RadioButton
                android:id="@+id/inputStaffInfo_pselectdl_rb4"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="false"
                android:text="70"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@drawable/yradiobtn_tabletext"
                android:background="@drawable/yradiobtn_table" />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/inputStaffInfo_pselectdl_rg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/inputStaffInfo_pselectdl_rb5"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="false"
                android:text="60"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@drawable/yradiobtn_tabletext"
                android:background="@drawable/yradiobtn_table"/>

            <RadioButton
                android:id="@+id/inputStaffInfo_pselectdl_rb6"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="false"
                android:text="50"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@drawable/yradiobtn_tabletext"
                android:background="@drawable/yradiobtn_table"/>
            <EditText
                android:id="@+id/inputStaffInfo_pselectdl_et1"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:hint="직접 입력"
                android:inputType="number"
                android:textSize="15sp"
                android:textColorHint="#D0D0D0"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/blue"
                android:background="@drawable/yradiobtn_table"
                android:textCursorDrawable="@drawable/yet_cursor"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/inputStaffInfo_pselectdl_okbtn1"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="bottom"
        android:background="@color/blue"
        android:gravity="center_horizontal|center_vertical"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>