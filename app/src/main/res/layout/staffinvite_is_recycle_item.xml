<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/staffinvite_RI_is_recycle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <!-- 승인 대기중 내용_L -->
        <LinearLayout
            android:id="@+id/staffInvite1_is_onelistL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
                <!-- 사람이미지 -->
                <ImageView
                    android:id="@+id/staffInvite1_is_personIv2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/yicon_stafffemale"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical">
                        <!-- 이름 -->
                        <TextView
                            android:id="@+id/staffInvite1_is_nameTv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:textColor="#737373"
                            android:textSize="13sp" />

                        <!-- 아이디 -->
                        <TextView
                            android:id="@+id/staffInvite1_is_idTv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="아이디"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <!-- 재전송 버튼 -->
                <TextView
                    android:id="@+id/staffInvite1_is_resendBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="재전송"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:layout_marginRight="20dp"/>

                <!-- 삭제 버튼 -->
                <TextView
                    android:id="@+id/staffInvite1_is_deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="삭제"
                    android:textColor="#737373"
                    android:textSize="13sp"
                    android:layout_marginRight="10dp"/>
        </LinearLayout> <!-- 승인 대기중 내용_L -->

</LinearLayout>

