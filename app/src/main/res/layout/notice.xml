<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- top_공지사항-->
    <FrameLayout
        android:id="@+id/notice_F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notice_toptv"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/lightblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="공지사항"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/notice_backib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yicon_back" />
    </FrameLayout>

    <!-- 텅/공지사항 _숨김F -->
    <FrameLayout
        android:id="@+id/notice_hidF2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 텅 _L -->
        <LinearLayout
            android:id="@+id/notice_tengL2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="120dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/notice_tengiv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/yimage_teng"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/notice_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지사항이 없습니다."
                android:textColor="#A9A9A9"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"/>
        </LinearLayout> <!-- 텅 _L -->

        <!-- 목록 개수 _HL -->
        <LinearLayout
            android:id="@+id/notice_nHL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:gravity="right">
            <ImageView
                android:id="@+id/notice_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yicon_list"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/notice_nnumtv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/notice_scoll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:visibility="visible"
            android:layout_marginTop="40dp">

            <!-- 스크롤 L -->
            <LinearLayout
                android:id="@+id/notice_scollL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="10dp">
                <!-- 공지사항 _L -->
                <LinearLayout
                    android:id="@+id/notice_nL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/yroundrec_w"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/notice_ntitletv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="공지제목"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <!-- 공지사항 내용 _HL -->
                    <LinearLayout
                        android:id="@+id/notice_nHL2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/notice_nnametv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="담당자"
                            android:textColor="#737373"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/notice_ntv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="  |  "
                            android:textColor="#737373"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/notice_ndatetv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="2023.02.24(금) 14:30"
                            android:textColor="#737373"
                            android:textSize="13sp" />
                    </LinearLayout> <!-- 공지사항 내용 _HL -->
                </LinearLayout> <!-- 공지사항 _L -->
            </LinearLayout> <!-- 스크롤 L -->

        </ScrollView>

        <!-- 추가 버튼 -->
        <ImageButton
            android:id="@+id/notice_plusbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/yicon_plus" />
    </FrameLayout> <!-- 텅/공지사항 _숨김F -->
</LinearLayout>