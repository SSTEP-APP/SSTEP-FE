<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/j_layout_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/dialog_check_manager_view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dialog_check_manager_staff_nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직원 이름"
            android:textColor="#000000"
            android:textSize="11sp" />

        <View
            android:id="@+id/dialog_check_manager_view12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dialog_check_manager_contactText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락처"
            android:textColor="#000000"
            android:textSize="11sp" />

        <View
            android:id="@+id/dialog_check_manager_view3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_check_manager_radioLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <CheckBox
                    android:id="@+id/dialog_check_manager_staffCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/ychbox_black"
                    android:drawablePadding="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dialog_check_manager_staffName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="82dp"
                    android:text="000"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dialog_check_manager_phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:text="010-0000-0000"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <CheckBox
                    android:id="@+id/dialog_check_manager_staffCB2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/ychbox_black"
                    android:drawablePadding="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dialog_check_manager_staffName2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="82dp"
                    android:text="000"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dialog_check_manager_phoneNum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:text="010-0000-0000"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/dialog_check_manager_okBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/j_button_round"
        android:backgroundTint="#0D69F3"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="11sp" />

    <Button
        android:id="@+id/dialog_check_manager_cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/j_button_round"
        android:text="취소"
        android:textSize="11sp" />

</LinearLayout>
