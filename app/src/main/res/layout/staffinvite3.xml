<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staffInvite3_L1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".StaffInvite3">

    <!-- top_직원 초대현황-->
    <FrameLayout
        android:id="@+id/staffInvite3_F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/staffInvite3_toptv"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/lightblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="직원 초대현황"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/staffInvite3_backib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yicon_back" />
    </FrameLayout>

    <!-- 스크롤 -->
    <ScrollView
        android:id="@+id/staffInvite3_scoll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/staffInvite3_L3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <!-- 초대 승인 Frame -->
            <FrameLayout
                android:id="@+id/staffInvite3_F2"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/yroundrec_w"
                android:paddingTop="25dp"
                android:paddingBottom="25dp">

                <LinearLayout
                    android:id="@+id/staffInvite3_L4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 위에 초대승인 + 숫자 -->
                    <LinearLayout
                        android:id="@+id/staffInvite3_HL1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- 초대 승인_text -->
                        <TextView
                            android:id="@+id/staffInvite3_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingLeft="15dp"
                            android:text="초대 승인"
                            android:textColor="#737373"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- 숫자_text-->
                        <TextView
                            android:id="@+id/staffInvite3_numtv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="1"
                            android:textColor="#0D69F3"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/staffInvite3_linetv3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:minHeight="1dp"
                        android:background="@drawable/yunderline_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom"/>
                    <!-- 승인 내용_frame -->
                    <FrameLayout
                        android:id="@+id/staffInvite3_F3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp">
                        <!-- 사람이미지 -->
                        <ImageView
                            android:id="@+id/staffInvite3_pimage1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            app:srcCompat="@drawable/yicon_stafffemale" />

                        <!-- 이름 -->
                        <TextView
                            android:id="@+id/staffInvite3_nametv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="5dp"
                            android:text="이름"
                            android:textColor="#737373"
                            android:textSize="13sp" />

                        <!-- 아이디 -->
                        <TextView
                            android:id="@+id/staffInvite3_idtv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="25dp"
                            android:text="아이디"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <!-- 승인 버튼 -->
                        <TextView
                            android:id="@+id/staffInvite3_yesbtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="70dp"
                            android:text="승인"
                            android:textColor="@color/blue"
                            android:textSize="13sp" />

                        <!-- 거절 버튼 -->
                        <TextView
                            android:id="@+id/staffInvite3_nobtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="25dp"
                            android:text="거절"
                            android:textColor="#737373"
                            android:textSize="13sp" />


                    </FrameLayout> <!-- 승인내용 리스트 frame -->
                </LinearLayout>
            </FrameLayout> <!-- 초대 승인 전체 frame -->

            <!-- 초대 승인 대기중 Frame -->
            <FrameLayout
                android:id="@+id/staffInvite3_F4"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/yroundrec_w"
                android:paddingTop="25dp"
                android:paddingBottom="25dp">

                <LinearLayout
                    android:id="@+id/staffInvite3_L5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 위에 초대승인대기중 + 숫자 -->
                    <LinearLayout
                        android:id="@+id/staffInvite3_HL2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- 초대 승인 대기중_text -->
                        <TextView
                            android:id="@+id/staffInvite3_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingLeft="15dp"
                            android:text="초대 승인 대기중"
                            android:textColor="#737373"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- 숫자_text-->
                        <TextView
                            android:id="@+id/staffInvite3_numtv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="1"
                            android:textColor="#0D69F3"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/staffInvite3_linetv4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:minHeight="1dp"
                        android:background="@drawable/yunderline_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom"/>

                    <!-- 승인 대기중 내용_frame -->
                    <FrameLayout
                        android:id="@+id/staffInvite3_F5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp">
                        <!-- 사람이미지 -->
                        <ImageView
                            android:id="@+id/staffInvite3_pimage2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            app:srcCompat="@drawable/yicon_stafffemale" />

                        <!-- 이름 -->
                        <TextView
                            android:id="@+id/staffInvite3_nametv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="5dp"
                            android:text="이름"
                            android:textColor="#737373"
                            android:textSize="13sp" />

                        <!-- 아이디 -->
                        <TextView
                            android:id="@+id/staffInvite3_idtv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="25dp"
                            android:text="아이디"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <FrameLayout
                            android:id="@+id/staffInvite3_changebtnF4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="25dp"
                            android:text="삭제">
                            <!-- 재전송 버튼 -->
                            <TextView
                                android:id="@+id/staffInvite3_yesbtn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="45dp"
                                android:text="재전송"
                                android:textColor="@color/blue"
                                android:textSize="13sp"
                                android:visibility="visible"/>
                            <!-- 삭제 버튼 -->
                            <TextView
                                android:id="@+id/staffInvite3_nobtn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="삭제"
                                android:textColor="#737373"
                                android:textSize="13sp"
                                android:visibility="visible"/>
                            <!-- 전송완료 버튼 -->
                            <TextView
                                android:id="@+id/staffInvite4_fibtn3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="15dp"
                                android:text="전송 완료"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:visibility="gone"/>

                        </FrameLayout>

                    </FrameLayout> <!-- 승인대기중 내용 리스트 frame -->
                </LinearLayout>
            </FrameLayout> <!-- 초대 승인 대기중 전체 frame -->

        </LinearLayout>
    </ScrollView>

    <!-- 맨 아래 '직원 초대' 버튼 -->
    <LinearLayout
        android:id="@+id/staffInvite3_L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <!-- 맨 아래 버튼 변경 F -->
        <FrameLayout
            android:id="@+id/staffInvite3_changebtnF3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/staffInvite3_bottomoffbtn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/yroundrec_bottombtnoff"
                android:text="직원초대"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:gravity="center"
                android:visibility="gone"/>
            <Button
                android:id="@+id/staffInvite3_bottomonbtn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/yroundrec_bottombtnon"
                android:text="직원초대"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:gravity="center"
                android:visibility="visible"/>
        </FrameLayout> <!-- 맨 아래 버튼 변경 F -->
    </LinearLayout>
</LinearLayout>