<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".RegisterStore">

    <!-- top_사업장 등록-->
    <FrameLayout
        android:id="@+id/regiStore_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/regiStore_topText"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/top"
            android:gravity="center_horizontal|center_vertical"
            android:text="사업장 등록"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/regiStore_back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yicon_back" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="130dp">

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/j_layout_background"
                    android:orientation="vertical"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp">


                    <TextView
                        android:id="@+id/regiStore_storeInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:text="사업장 정보"
                        android:textColor="#616161"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/regiStore_view1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="15dp"
                        android:background="#E1E1E1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/regiStore_StoreNameText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="사업장명"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/regiStore_nameEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yedittext_w_sg"
                            android:ems="10"
                            android:fontFamily="@font/nanumsquareneo_brg"
                            android:hint="ex)  스텦"
                            android:inputType="text"
                            android:textColor="@color/likeblack"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="13sp"
                            android:textCursorDrawable="@drawable/yet_cursor"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/regiStore_addressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기본주소"
                                android:textColor="#000000" />

                            <View
                                android:id="@+id/regiStore_view2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/regiStore_addressbtn"
                                android:layout_width="67dp"
                                android:layout_height="27dp"
                                android:background="@drawable/j_button_round_check"
                                android:text="주소 검색"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/regiStore_addressEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yedittext_w_sg"
                            android:ems="10"
                            android:hint="시흥시 산기대학로"
                            android:inputType="text"
                            android:textColor="@color/likeblack"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="13sp"
                            android:textCursorDrawable="@drawable/yet_cursor"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nanumsquareneo_brg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/regiStore_addDetailText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="상세주소"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/regiStore_detailEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="1층 102호"
                            android:inputType="text"
                            android:textColor="@color/likeblack"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="13sp"
                            android:background="@drawable/yedittext_w_sg"
                            android:textCursorDrawable="@drawable/yet_cursor"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumsquareneo_brg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/regiStore_typeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사업자 분류"
                            android:textColor="#000000" />

                        <View
                            android:id="@+id/regiStore_view3"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/regiStore_choicebtn"
                            android:layout_width="67dp"
                            android:layout_height="27dp"
                            android:background="@drawable/j_button_round_check"
                            android:text="분류 선택"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/j_layout_background"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/regiStore_userinfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:text="급여 사용자 정보"
                        android:textColor="#616161"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/regiStore_view4"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="15dp"
                        android:background="#E1E1E1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/regiStore_scaleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="사업장 규모"
                            android:textColor="@color/likeblack" />

                        <RadioGroup
                            android:id="@+id/regiStore_scaleRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="25dp">

                            <View
                                android:id="@+id/regiStore_view5"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <RadioButton
                                android:id="@+id/regiStore_under5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5인 미만"
                                android:button="@drawable/yradiobtn_red"
                                android:paddingLeft="10dp"/>

                            <View
                                android:id="@+id/regiStore_view6"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <RadioButton
                                android:id="@+id/regiStore_over5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5인 이상"
                                android:button="@drawable/yradiobtn_red"
                                android:paddingLeft="10dp"/>

                            <View
                                android:id="@+id/regiStore_view7"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </RadioGroup>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="플랜 사용 여부"
                            android:textColor="@color/likeblack"
                            android:layout_marginTop="25dp"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="25dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="무료"
                                android:button="@drawable/yradiobtn_red"
                                android:paddingLeft="10dp"
                                android:clickable="false"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="유료"
                                android:button="@drawable/yradiobtn_red"
                                android:paddingLeft="10dp"
                                android:clickable="false"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </RadioGroup>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="* 5인 이상일 경우 자동으로 유료플랜이 시작됩니다."
                            android:textSize="10sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/red"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/regiStore_paydayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="급여날"
                            android:textColor="@color/likeblack" />

                        <View
                            android:id="@+id/regiStore_view8"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/regiStore_paydaybtn"
                            android:layout_width="90dp"
                            android:layout_height="27dp"
                            android:background="@drawable/j_button_shape"
                            android:text="급여날 설정"
                            android:textColor="#0D69F3"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/regiStore_completeBtn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/j_layout_button_quad"
            android:text="등록 완료"
            android:textColor="#FFFFFF"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

    </FrameLayout>
</LinearLayout>