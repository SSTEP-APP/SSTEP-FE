<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    tools:context=".checklist.Checklist_detail">

    <!-- top_-->
    <FrameLayout
        android:id="@+id/checkList_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/checkList_topText"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/lightblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="마감 시 에어컨 끄기"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/checkList_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yicon_back" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/j_layout_background"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/checkDetail_localendTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="18dp"
                        android:text="마감 예정시간"
                        android:textColor="#636363"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/checkDetail_view1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/checkDetail_endTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="16dp"
                        android:text="2023년 2월 10일 13:00까지"
                        android:textColor="#636363"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:id="@+id/checkDetail_line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#C6C6C6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/checkDetail_localStaffName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="담당직원"
                        android:textColor="#636363"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/checkDetail_view2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/checkDetail_staffNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="#636363"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/checkDetail_localCheckTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="확인시간"
                        android:textColor="#636363"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/checkDetail_view3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/checkDetail_checkTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="확인 전"
                        android:textColor="#636363"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/j_layout_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/checkDetail_addImageview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/yicon_camerablack" />

                <Button
                    android:id="@+id/checkDetail_addImageBtn"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:background="@android:color/transparent"
                    android:text="등록하기"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/j_layout_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/checkDetail_memoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="16dp"
                    android:text="메모"
                    android:textColor="#969696"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/checkDetail_memoEt"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/j_button_stroke737373"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="내용을 입력하세요."
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:textColorHint="#9A9A9A"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/checkDetail_view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/checkDetail_completeBtn"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/j_layout_button_quad"
        android:text="수정완료"
        android:textColor="#FFFFFF" />

</LinearLayout>