<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:id="@+id/paperhmodify_L1">

    <!-- top_보건증 수정 -->
    <FrameLayout
        android:id="@+id/paperhmodify_F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/paperhmodify_toptv"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/lightblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="보건증 수정"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!-- 뒤로가기 아이콘 -->
        <ImageButton
            android:id="@+id/paperhmodify_backib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yicon_back" />

        <!-- 홈 아이콘 -->
        <ImageView
            android:id="@+id/paperhmodify_homeiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/yicon_home" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">
        <!-- 보건증 수정 전체 L -->
        <LinearLayout
            android:id="@+id/paperhmodify_L3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <!-- 보건증 촬용 Frame -->
            <FrameLayout
                android:id="@+id/paperhmodify_F2"
                android:layout_width="match_parent"
                android:layout_height="362dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yroundrec_w"
                android:paddingTop="25dp"
                android:paddingBottom="25dp">

                <LinearLayout
                    android:id="@+id/paperhmodify_L4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 보건증 좔영_text -->
                    <TextView
                        android:id="@+id/paperhmodify_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="보건증 촬영"
                        android:textColor="#737373"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/paperhmodify_linetv3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/yunderline_text"
                        android:minHeight="1dp" />
                    <!-- 사진촬영 F -->
                    <FrameLayout
                        android:id="@+id/paperhmodify_F3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/paperview_photoiv1"
                            android:layout_width="330dp"
                            android:layout_height="250dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/yroundrec_w_sg"
                            android:layout_gravity="center_horizontal"/>

                        <ImageButton
                            android:id="@+id/paperview_closebtn1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/yicon_closeg" />
                    </FrameLayout> <!-- 사진촬영 F -->
                </LinearLayout>
            </FrameLayout> <!-- 보건증 촬용 Frame -->

            <!-- 보건증 정보입력 Frame -->
            <LinearLayout
                android:id="@+id/paperhmodify_F4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yroundrec_w"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:paddingRight="15dp"
                android:paddingBottom="25dp">
                <!-- 성명_text -->
                <TextView
                    android:id="@+id/paperhmodify_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성명"
                    android:textColor="#737373"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/paperhmodify_nameet1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="성명"
                    android:text="김유경"
                    android:textSize="13sp"
                    android:textCursorDrawable="@drawable/yet_cursor"/>

                <LinearLayout
                    android:id="@+id/paperhmodify_HL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paperhmodify_tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="검진일"
                        android:textColor="#737373"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <!-- 검진일 버튼 -->
                    <Button
                        android:id="@+id/paperhmodify_datebtn2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/yroundrec_w_sblue"
                        android:cursorVisible="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="2023년 1월 25일"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/paperhmodify_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만료일"
                    android:textColor="#737373"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/paperhmodify_nameet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="만료일"
                    android:text="2024년 1월 25일"
                    android:textSize="13sp"
                    android:textCursorDrawable="@drawable/yet_cursor"/>
            </LinearLayout> <!-- 보건증 정보입력 Frame -->

            <TextView
                android:id="@+id/paperhmodify_deltv7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="보건증 삭제하기"
                android:textColor="@color/red"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout> <!-- 보건증 수정 전체 L -->
    </ScrollView>

    <!-- 맨 아래 '입력완료' 버튼 -->
    <LinearLayout
        android:id="@+id/paperhmodify_L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <!-- 맨 아래 버튼 변경 F -->
        <FrameLayout
            android:id="@+id/paperhmodify_changebtnF3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/paperhmodify_bottomoffbtn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/yroundrec_bottombtnoff"
                android:text="수정 완료"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:gravity="center"
                android:visibility="visible"/>
            <Button
                android:id="@+id/paperhmodify_bottomonbtn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/yroundrec_bottombtnon"
                android:text="수정 완료"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:gravity="center"
                android:visibility="gone"/>
        </FrameLayout> <!-- 맨 아래 버튼 변경 F -->
    </LinearLayout>
</LinearLayout>